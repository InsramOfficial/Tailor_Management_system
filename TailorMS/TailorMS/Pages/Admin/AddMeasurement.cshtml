@page
@model TailorMS.Pages.Admin.AddMeasurementModel
@{
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Body Measurement</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <style>
        body {
            background-color: #e9ecef;
            font-family: sans-serif;
        }

        .form-container {
            margin: 50px auto;
            max-width: 800px; /* Adjusted max-width for two columns */
            padding: 30px;
            border: 1px solid #ddd;
            border-radius: 4px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        .form-title {
            text-align: center;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            font-weight: bold;
        }

        .form-control {
            width: 100%;
            padding: 10px 12px;
            border: 1px solid #ddd;
            border-radius: 4px;
            box-sizing: border-box;
        }

        .btn-primary {
            background-color: #337ab7;
            border-color: #337ab7;
        }
    </style>
</head>
<body>
    <div class="container form-container">
        <h2 class="form-title">Body Measurement Form</h2>
        <form method="post">
            <div class="row">
                <div class="col-md-6">
                 
                    <div class="form-group">
                        <label  class="form-label">Customer</label>
                      
                        <select type="text" class="form-control" required asp-for="measurement.customer_id" asp-items="@(new SelectList(Model.Customer,"id","fullname"))">
                        </select>
                  <small>Check Your Name Please</small>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Height</label>
                        <input class="form-control" asp-for="measurement.height"required placeholder="Enter Height">
                    </div>
                    <div class="form-group">
                        <label  class="form-label">Hip Measurement</label>
                        <input  class="form-control" asp-for="measurement.hip_measurement"required placeholder="Enter hip measurement">
                    </div>
                    <div class="form-group">
                        <label  class="form-label">Bust Measurement</label>
                        <input  class="form-control" asp-for="measurement.bust_measurement" required placeholder="Enter bust measurement">
                    </div>
                    <input asp-for="measurement.created_date" hidden class="form-control" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" placeholder="Your date.." />
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label">Waist Measurement</label>
                        <input   class="form-control" asp-for="measurement.waist_measurement" required placeholder="Enter waist measurement">
                    </div>
                    <div class="form-group">
                        <label class="form-label">IdealLengthDress</label>
                        <input class="form-control" asp-for="measurement.ideal_dress_length"required placeholder="Enter waist measurement">
                    </div>
                    <div class="form-group">
                        <label   class="form-label">Ideal Width Neckline</label>
                        <input class="form-control" asp-for="measurement.ideal_neckline_width"  required placeholder="Enter bust measurement">
                    </div>
                    <div class="form-group">
                        <label for="waistMeasurement" class="form-label">IdealLengthStrap</label>
                        <input   class="form-control" asp-for="measurement.ideal_strap_length" required placeholder="Enter waist measurement">
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Send Information</button>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2eWLxcpJyRn9pcXkxy3DSHBXIq8++WdtCFwIWJLHzFUxa0uLPA10zCMK8mjz" crossorigin="anonymous"></script>
</body>
</html>

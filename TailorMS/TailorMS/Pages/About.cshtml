@page
@model TailorMS.Pages.AboutModel
@{
}
<main>
    <!-- Slider Area Start -->
    <div class="slider-area position-relative">
        <div class="slider-active">
            <!-- Single Slider -->
            <div class="single-slider position-relative hero-overly slider-height2 d-flex align-items-center" data-background="assets/img/hero/h1_hero.png">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-6 col-lg-6">
                            <div class="hero-caption hero-caption2">
                                <img src="assets/img/hero/hero-icon.png" alt="" data-animation="zoomIn" data-delay="1s">
                                <h2 data-animation="fadeInLeft" data-delay=".4s">About Us</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Left img -->
            <div class="hero-img hero-img2">
                <img src="assets/img/hero/h2_hero2.png" alt="" data-animation="fadeInRight" data-transition-duration="5s">
            </div>
        </div>
    </div>
    <!-- Slider Area End -->
    <!-- Visit Our Tailor Start -->
    <section class="visit-tailor-area fix mt-margin">
        <!-- Right Contents -->
        <div class="tailor-offers"></div>
        <!-- Left Contents -->
        <div class="tailor-details">
            <h2>About Our Tailor House</h2>
            <p class="pera-top">Discover the story behind our tailor house and our commitment to quality craftsmanship.</p>
            <p class="pera-bottom">We strive to provide exceptional tailoring services tailored to your unique style and preferences. Let us bring your vision to life with our expert craftsmanship and attention to detail.</p>
            <a href="#" class="btn">More About Us</a>
        </div>
    </section>
    <!-- Visit Our Tailor End -->
    <!-- Services Area Start -->
    <section class="categories-area section-padding40">
        <div class="container">
            <!-- Section Title -->
            <div class="row justify-content-center">
                <div class="col-xl-6 col-lg-6 col-md-7 col-sm-9">
                    <div class="section-tittle text-center mb-60">
                        <h2>Why Choose Our Service?</h2>
                        <p>Discover the advantages of partnering with us for all your tailoring needs.</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <!-- Service 1 -->
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="single-cat mb-50 wow fadeInUp" data-wow-duration="1s" data-wow-delay=".2s">
                        <div class="cat-icon">
                            <img src="assets/img/icon/services1.svg" alt="">
                        </div>
                        <div class="cat-cap">
                            <h5>Tailor Sewing</h5>
                            <p>Experience precise and meticulous sewing techniques to ensure the perfect fit for your garments.</p>
                        </div>
                    </div>
                </div>
                <!-- Service 2 -->
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="single-cat mb-50 wow fadeInUp" data-wow-duration="1s" data-wow-delay=".4s">
                        <div class="cat-icon">
                            <img src="assets/img/icon/services2.svg" alt="">
                        </div>
                        <div class="cat-cap">
                            <h5>Custom Tailoring</h5>
                            <p>Enjoy personalized attention and custom tailoring services tailored to your unique style and preferences.</p>
                        </div>
                    </div>
                </div>
                <!-- Service 3 -->
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="single-cat mb-50 wow fadeInUp" data-wow-duration="1s" data-wow-delay=".6s">
                        <div class="cat-icon">
                            <img src="assets/img/icon/services3.svg" alt="">
                        </div>
                        <div class="cat-cap">
                            <h5>Alterations</h5>
                            <p>Trust our skilled tailors to handle all your alteration needs with precision and attention to detail.</p>
                        </div>
                    </div>
                </div>
                <!-- Service 4 -->
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="single-cat mb-50 wow fadeInUp" data-wow-duration="1s" data-wow-delay=".8s">
                        <div class="cat-icon">
                            <img src="assets/img/icon/services4.svg" alt="">
                        </div>
                        <div class="cat-cap">
                            <h5>Quality Fabrics</h5>
                            <p>Explore our collection of premium quality fabrics sourced from around the world for your ultimate satisfaction.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Services Area End -->
    <!-- Video Start -->
    <div class="video-area section-bg2 d-flex align-items-center" data-background="assets/img/gallery/video-bg.png">
        <div class="container">
            <div class="video-wrap position-relative">
                <!-- Video icon -->
                <div class="video-icon">
                    <a class="popup-video btn-icon" href="https://www.youtube.com/watch?v=up68UAfH0d0"><i class="fas fa-play"></i></a>
                </div>
            </div>
        </div>
    </div>
    <!-- Video End -->
    <!-- Testimonial Area Start -->
    <section class="testimonial-area testimonial-padding fix">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-lg-9">
                    <div class="about-caption pb-bottom">
                        <!-- Testimonial Start -->
                        <div class="h1-testimonial-active dot-style">
                            <!-- Single Testimonial -->
                            <div class="single-testimonial position-relative">
                                <div class="testimonial-caption">
                                    <img src="assets/img/icon/quotes-sign.png" alt="" class="quotes-sign">
                                    <p>Our experience with this tailor has been nothing short of exceptional. Their attention to detail and commitment to quality craftsmanship truly sets them apart. We highly recommend their services to anyone looking for premium tailoring solutions.</p>
                                </div>
                                <!-- Founder -->
                                <div class="testimonial-founder d-flex align-items-center">
                                    <div class="founder-img">
                                        <img src="assets/img/icon/testimonial.png" alt="">
                                    </div>
                                    <div class="founder-text">
                                        <span>Robert </span>
                                        <p>Creative Director at TailorCraft</p>
                                    </div>
                                </div>
                            </div>
                            <!-- Single Testimonial -->
                            <div class="single-testimonial position-relative">
                                <div class="testimonial-caption">
                                    <img src="assets/img/icon/quotes-sign.png" alt="" class="quotes-sign">
                                    <p>Choosing this tailor for our bespoke suits was one of the best decisions we made. Their expertise and attention to detail ensured that every aspect of our suits was perfectly tailored to our preferences. We couldn't be happier with the results!</p>
                                </div>
                                <!-- Founder -->
                                <div class="testimonial-founder d-flex align-items-center">
                                    <div class="founder-img">
                                        <img src="assets/img/icon/testimonial.png" alt="">
                                    </div>
                                    <div class="founder-text">
                                        <span>Emily White</span>
                                        <p>CEO of Elegant Attire</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Testimonial End -->
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Testimonial Area End -->
    <!-- Instagram Social Start -->
    <section class="instagram-area fix pb-bottom">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-6 col-lg-6 col-md-8 col-sm-10">
                    <div class="section-tittle text-center mb-80">
                        <h2>Follow Us on Instagram</h2>
                        <p>Stay updated with our latest designs and fashion trends by following us on Instagram.</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <div class="single-instagram mb-30">
                        <img src="assets/img/gallery/ahsan.png" style="width:auto;  height:500px" alt="">
                        <a href="#"><i class="ti-instagram"></i></a>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="single-instagram">
                        <img src="assets/img/gallery/seemab.JPG" style="width:auto;  height:500px" alt="">
                        <a href="#"><i class="ti-instagram"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </section>    <!-- Instagram Social End -->
</main>
